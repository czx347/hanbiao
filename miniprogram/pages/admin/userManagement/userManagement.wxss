page{ 
  height: 100%; 
  width: 100%;
 }  

 .mana-data{
  display: flex;
  flex-direction: row;
  background-color: #C9E2F8;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 20rpx;
}

.mana-image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.mana-text{
  font-size: 40rpx;
  font-weight: 700;
  margin-left: 20rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  width: 500rpx;
  height: 100rpx;
  white-space:nowrap;
}

.mana-button{
  width: 150rpx;
  height: 150rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

}

.mana-button view{
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 50rpx;
  color: white;

}

