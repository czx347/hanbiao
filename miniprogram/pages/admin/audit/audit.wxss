page{ 
  height: 100%; 
  overflow: hidden;
  width: 100%;
 }  

.audit-top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 20rpx;
}

.active{
  background-color: #5696F8;
  color: white;
  border: white 1rpx solid;

}

.audit-top view{
  width: 45%;
  height: 70rpx; 
  line-height: 70rpx;
}

.audit-button{
  border: 1rpx solid black;
  text-align: center;
  border-radius: 100rpx;
}

.audit-data{
  display: flex;
  flex-direction: row;
  background-color: #C9E2F8;
  margin: 20rpx 30rpx;
  border-radius: 20rpx;
  padding: 10rpx;
  justify-content: space-around;
}

.audit-titlt{
  font-size: 40rpx;
  font-weight: 700;
  margin: 10rpx 0;
  overflow:hidden;
  text-overflow:ellipsis;
  width: 450rpx;
  white-space:nowrap;
}

.audit-schedule{
  font-size: small;
  margin: 10rpx 0;
  display: flex;
  flex-direction: row;
}

.audit-time{
  overflow:hidden;
  text-overflow:ellipsis;
  width: 450rpx;
  white-space:nowrap;
}

.audit-schedule progress{
  margin: auto 10rpx;
  width: 70%;
}

.mini-button{
  width: 150rpx;
  height: 60rpx;
  margin: 30rpx 10rpx 0;
  color: white;
  border: none;
  line-height: 60rpx;
}

.sroll{
  height: 100%;
  height: 100%;
}