page{
  width: 100%;
}

.bind-main{
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  margin: 200rpx 0;
}

.bind-form{
  width: 85%;
  height: 600rpx;
  border-radius:10rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.row{
  display: flex;
  flex-direction: row;
}


.bind-button{
  background-color: #5696F8;
  line-height: 80rpx;
  width: 85%;
  height: 80rpx;
  justify-content: center; 
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  color: white;
  font-weight: 600;
  letter-spacing:20rpx;
  font-size: 30rpx;
  margin: 300rpx auto 0;
}


.type-button{
  margin: 40rpx 0 100rpx;
  width: 85%;
  display: flex;
  justify-content: space-around;
}

.type-button-view{
  height: 70rpx;
  line-height: 70rpx;
  width: 30%;
  text-align: center;
  border-radius: 10rpx;
  margin: 0 20rpx;
  font-weight: 600;
}

.on-button{
  background-color: #5696F8;
  color: white;
  font-weight: 600;
}

radio-group{
  display: flex;
  justify-content: center;
}

radio-group view{
  margin-left: 50rpx;
  margin-right: 50rpx;
}

input{
  height: 55rpx;
  width: 70%;
}

.bind-input{
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx black solid;
  padding: 10rpx;
}

