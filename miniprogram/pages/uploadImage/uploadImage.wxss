page{
  width: 100%;
  height: 100%;
}

.upload-main{
  width: 100%;
  height: 100%;
}

.upload-image{
  width: 90%;
  margin: 20rpx auto;
  background-color: white;
  padding: 20rpx;
  border-radius: 20rpx;
}

.upload-main-button{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.upload-main-number{
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 100%;
  text-align: center;
  color: #5696F8;
  font-weight: 800;
  padding: 0 10rpx;

}

.upload-main-delete{
  background-color: rgb(207, 84, 84);
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 35rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: white;
  border-radius: 10rpx;
}

.upload-main-image{
  width: 100%;
  border-radius: 10rpx;
}

.upload-main-textarea textarea{
  width: 100%;
  height: 150rpx;
  margin-top: 20rpx;
}

.upload-bottom{
  position: fixed;
  right: 0;
  bottom: 0;
  z-index: 99;
  width: 100%;
  height: 130rpx;
  background-color: white;
  display: flex;
  justify-content: center;
}

.upload-bottom view{
  width: 90%;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  color: white;
  border-radius: 30rpx;
  margin-top: 10rpx;
}