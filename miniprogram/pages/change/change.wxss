page{
  width: 100%;
  height: 100%;
}

.change-main{
  width: 100%;
  height: 100%;
}

.change-main-line{
  background-color: white;
  width: 90%;
  margin: 20rpx auto;
  display: flex;
  flex-direction: row;
  border-radius: 20rpx;
  padding: 20rpx;
}

.change-main-icon{
  color: #5696F8;
  font-weight: 700;
  font-size: 35rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-right: 20rpx;
}

.change-main-text{
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 25rpx;

}

.active{
  color: white;
  background-color: #C9E2F8;

}



.change-bottom{
  position: fixed;
  right: 0;
  bottom: 0;
  z-index: 99;
  width: 100%;
  height: 130rpx;
  background-color: white;
  display: flex;
  justify-content: space-between;

}

.change-bottom view{
  width: 80%;
  height: 70rpx;
  background-color: #5696F8;
  margin: 10rpx 20rpx;
  border-radius: 30rpx;
  text-align: center;
  color: white;
  line-height: 70rpx;

}