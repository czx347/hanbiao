.window{
  width: 100%;
  height: 15%;
  position: fixed;
  z-index: 99;
  left: 0;
  bottom: 0;

}

.window-main{
  width: 80%;
  /* height: 70rpx; */
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: row;
  margin: auto;
  border-radius: 20rpx;
  padding: 20rpx;
  justify-content: space-around;

}

.window-close{
  color: rgb(189, 184, 184);
  font-size: 50rpx;
  font-weight: 200;
  line-height: 30rpx;
}
